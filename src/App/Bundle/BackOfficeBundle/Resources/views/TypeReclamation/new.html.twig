{% extends "::layout.html.twig" %}

{% block title %} import data{% endblock %}

{% block content %}
	<div class="panel panel-default">
        <form class="form-horizontal form-bordered" action="" method="post" novalidate="novalidate">
        <div class="panel-heading">
          <div class="panel-btns">
            <a href="#" class="panel-close">&times;</a>
            <a href="#" class="minimize">&minus;</a>
          </div>
          <h4 class="panel-title">Ajouter un nouveau type de reclamation</h4>
          
        </div>

        <div class="panel-body panel-body-nopadding">
          
          {% if errors %}
            <div class="error" style="display:block;padding : 25px 50px;">
              {% for err in errors %}
              <label class="error">{{ err | raw }}</label>
              {% endfor %}
            </div>
            {% endif %}
            
            <div class="form-group">
              <label class="col-sm-3 control-label" for="{{ form.code.vars.id }}">Code</label>
              <div class="col-sm-6">
                {{ form_widget(form.code,{'attr' : {'class' : 'form-control'}})}}
              </div>
            </div>
       
           	<div class="form-group">
              <label class="col-sm-3 control-label" for="{{ form.libelle.vars.id }}">Libelle</label>
              <div class="col-sm-6">
                {{ form_widget(form.libelle,{'attr' : {'class' : 'form-control'}})}}
              </div>
            </div>

            <div class="form-group">
              <label class="col-sm-3 control-label" for="{{ form.maxAutorise.vars.id }}">max autorise</label>
              <div class="col-sm-6">
                {{ form_widget(form.maxAutorise,{'attr' : {'class' : 'form-control'}})}}
              </div>
            </div>

        </div><!-- panel-body -->
        
      <div class="panel-footer">
			 <div class="row">
				<div class="col-sm-6 col-sm-offset-3">
				  <center><button type="submit" class="btn btn-primary">Ajouter</button></center>
				</div>
			 </div>
		  </div><!-- panel-footer -->
      </form>
      </div><!-- panel -->
{% endblock %}
